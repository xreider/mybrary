extends ../layouts/main 
include ../mixins/deleteForm

block content
    h2 Search Authors
    form(action='/authors' method='GET')
        .form_row
            .form_item
                label Name
                input(type="text" name='name' value=searchOptions.name)
        
        .form_row.form_row_end
            button.btn.btn_primary(type='submit') Search
    br
    each author in authors
        .author_row
            .author_name= author.name
            .btn_row
                a.btn.btn_primary(href=`/authors/${author.id}`) View
                a.btn.btn_primary(href=`/authors/${author.id}/edit`) Edit
                +deleteForm(`/authors/${author.id}?_method=DELETE`)
        