extends ../layouts/main
include ../mixins/csurf

block content
    form(action="/user/signup" method="post")
        .container
            label(for="name") Name
            input(type="name" placeholder="Enter your name" name="name" required)

            label(for="email") Email
            input(type="email" placeholder="Enter your email" name="email" required)
            
            label(for="password") Password
            input(type="password" placeholder="Enter your password" name="password" required)
            
            label(for="repeatPassword") Repeat Password
            input(type="password" placeholder="Repeat your password" name="repeatPassword" required)
            
            +csurf(csrf)
            button(type="submit") Sign up
        .container
            a(href="/user/signin") Sign in
